{
  "name": "tosec-tool",
  "version": "2.0.0",
  "description": "Tooling for usage with the TOSEC datasets and corresponding files.",
  "keywords": [
    "retro",
    "emulation",
    "rom",
    "amiga",
    "c64",
    "tosec",
    "dataset"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakobwesthoff/tosec-tool.git"
  },
  "engines": {
    "node": ">= 12 <13"
  },
  "bin": {
    "tosec": "./build/src/tosec.js",
    "tosec-sort": "./build/src/tosec-sort.js",
    "tosec-cleandb": "./build/src/tosec-cleandb.js",
    "tosec-extract": "./build/src/tosec-extract.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/crc": "^3.4.0",
    "@types/jest": "^24.0.15",
    "@types/meow": "^5.0.0",
    "@types/node": "^10.14.10",
    "@types/sax": "^1.2.0",
    "@types/unzipper": "^0.10.0",
    "jest": "~24.8.0",
    "prettier": "~1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tsutils": "~3.14.0",
    "@types/fs-extra": "^8.0.0",
    "typescript": "~3.5.0"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "npm run build"
  },
  "author": "Jakob Westhoff <jakob@westhoffswelt.de> (http://westhoffswelt.de)",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^5.4.1",
    "chalk": "^2.4.2",
    "crc": "^3.8.0",
    "file-type": "^12.1.0",
    "fs-extra": "^8.1.0",
    "log-symbols": "^3.0.0",
    "log-update": "^3.2.0",
    "meow": "^5.0.0",
    "ora": "^3.4.0",
    "p-iteration": "^1.1.8",
    "read-chunk": "^3.2.0",
    "readdirp": "^3.1.1",
    "sax": "^1.2.4",
    "tslib": "~1.10.0",
    "unzipper": "^0.10.2"
  }
}
